    border-radius: 12px;
    box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.6);
    pointer-events: none;
    transition: all 0.3s ease-out;
  }

  .tutorial-tooltip {
    position: absolute;
    z-index: 10;
    max-width: 350px;
  }

  /* Fl√®che du tooltip */
  .tutorial-tooltip::before {
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    background: white;
    transform: rotate(45deg);
  }

  .tutorial-tooltip.arrow-top::before {
    top: -6px;
    left: 50%;
    margin-left: -6px;
  }

  .tutorial-tooltip.arrow-bottom::before {
    bottom: -6px;
    left: 50%;
    margin-left: -6px;
  }

  .tutorial-tooltip.arrow-left::before {
    left: -6px;
    top: 50%;
    margin-top: -6px;
  }

  .tutorial-tooltip.arrow-right::before {
    right: -6px;
    top: 50%;
    margin-top: -6px;
  }
</style>

<script>
  // Configuration des √©l√©ments cibles pour chaque √©tape
  const TUTORIAL_TARGETS: Record<number, { selector: string; position: 'top' | 'bottom' | 'left' | 'right' }> = {
    1: { selector: '#uploadZone', position: 'bottom' },
    2: { selector: '#toStep2Btn', position: 'bottom' },
    3: { selector: '#step2', position: 'top' },
    4: { selector: '#toStep3Btn', position: 'top' },
  };

  class OnboardingTutorial {
    private overlay: HTMLElement | null;
    private currentStep: number = 0;
    private totalSteps: number = 4;
    private isActive: boolean = false;

    constructor() {
      this.overlay = document.getElementById('onboarding-overlay');
      this.init();
    }

    private init() {
      if (!this.overlay) return;

      // V√©rifier si le tutoriel a d√©j√† √©t√© compl√©t√©
      const tutorialCompleted = localStorage.getItem('primadopu_tutorial_completed');
      if (tutorialCompleted === 'true') {
        return;
      }

      // Afficher le tutoriel
      this.show();
      this.bindEvents();
    }

    private bindEvents() {
      if (!this.overlay) return;

      // Boutons suivant
      this.overlay.querySelectorAll('.tutorial-next').forEach(btn => {
        btn.addEventListener('click', () => this.nextStep());
      });

      // Boutons pr√©c√©dent
      this.overlay.querySelectorAll('.tutorial-prev').forEach(btn => {
        btn.addEventListener('click', () => this.prevStep());
      });

      // Bouton passer
      this.overlay.querySelectorAll('.tutorial-skip').forEach(btn => {
        btn.addEventListener('click', () => this.complete());
      });

      // Bouton terminer
      this.overlay.querySelectorAll('.tutorial-finish').forEach(btn => {
        btn.addEventListener('click', () => this.complete());
      });

      // Fermer avec Escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && this.isActive) {
          this.complete();
        }
      });

      // Resize handler pour repositionner les tooltips
      window.addEventListener('resize', () => {
        if (this.isActive && this.currentStep > 0) {
          this.positionTooltip(this.currentStep);
        }
      });
    }

    private show() {
      if (!this.overlay) return;
      this.overlay.classList.remove('hidden');
      this.isActive = true;
      document.body.style.overflow = 'hidden';
      this.showStep(0);
    }

    private hide() {
      if (!this.overlay) return;
      this.overlay.classList.add('hidden');
      this.isActive = false;
      document.body.style.overflow = '';
    }

    private showStep(step: number) {
      if (!this.overlay) return;

      // Masquer toutes les √©tapes
      this.overlay.querySelectorAll('.tutorial-step').forEach(el => {
        el.classList.add('hidden');
      });

      // Afficher l'√©tape courante
      const stepEl = document.getElementById(`tutorial-step-${step}`);
      if (stepEl) {
        stepEl.classList.remove('hidden');
      }

      // Positionner le spotlight et tooltip pour les √©tapes 1-4
      if (step > 0) {
        this.positionTooltip(step);
      }

      this.currentStep = step;
    }

    private positionTooltip(step: number) {
      const config = TUTORIAL_TARGETS[step as keyof typeof TUTORIAL_TARGETS];
      if (!config) return;

      const target = document.querySelector(config.selector);
      if (!target) return;

      const rect = target.getBoundingClientRect();
      const spotlight = document.getElementById(`spotlight-${step}`);
      const tooltip = document.getElementById(`tooltip-${step}`);

      if (spotlight) {
        // Positionner le spotlight autour de l'√©l√©ment cible
        const padding = 8;
        spotlight.style.top = `${rect.top - padding}px`;
        spotlight.style.left = `${rect.left - padding}px`;
        spotlight.style.width = `${rect.width + padding * 2}px`;
        spotlight.style.height = `${rect.height + padding * 2}px`;
      }

      if (tooltip) {
        // Retirer les classes de fl√®che existantes
        tooltip.classList.remove('arrow-top', 'arrow-bottom', 'arrow-left', 'arrow-right');

        const tooltipRect = tooltip.getBoundingClientRect();
        const gap = 16;

        switch (config.position) {
          case 'bottom':
            tooltip.style.top = `${rect.bottom + gap}px`;
            tooltip.style.left = `${Math.max(16, Math.min(rect.left + rect.width / 2 - tooltipRect.width / 2, window.innerWidth - tooltipRect.width - 16))}px`;
            tooltip.classList.add('arrow-top');
            break;
          case 'top':
            tooltip.style.top = `${rect.top - tooltipRect.height - gap}px`;
            tooltip.style.left = `${Math.max(16, Math.min(rect.left + rect.width / 2 - tooltipRect.width / 2, window.innerWidth - tooltipRect.width - 16))}px`;
            tooltip.classList.add('arrow-bottom');
            break;
          case 'left':
            tooltip.style.top = `${rect.top + rect.height / 2 - tooltipRect.height / 2}px`;
            tooltip.style.left = `${rect.left - tooltipRect.width - gap}px`;
            tooltip.classList.add('arrow-right');
            break;
          case 'right':
            tooltip.style.top = `${rect.top + rect.height / 2 - tooltipRect.height / 2}px`;
            tooltip.style.left = `${rect.right + gap}px`;
            tooltip.classList.add('arrow-left');
            break;
        }
      }
    }

    private nextStep() {
      if (this.currentStep < this.totalSteps) {
        this.showStep(this.currentStep + 1);
      } else {
        this.complete();
      }
    }

    private prevStep() {
      if (this.currentStep > 0) {
        this.showStep(this.currentStep - 1);
      }
    }

    private complete() {
      localStorage.setItem('primadopu_tutorial_completed', 'true');
      this.hide();
    }
  }

  // Initialiser le tutoriel au chargement
  document.addEventListener('DOMContentLoaded', () => {
    new OnboardingTutorial();
  });

  // R√©initialiser le tutoriel (pour debug)
  (window as any).resetTutorial = () => {
    localStorage.removeItem('primadopu_tutorial_completed');
    location.reload();
  };
</script>
