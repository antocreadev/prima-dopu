                    </div>
                    <div class="w-full bg-white/70 rounded-full h-3 overflow-hidden">
                      <div
                        class:list={[
                          "h-full rounded-full transition-all",
                          creditStats.percentage >= 100
                            ? "bg-red-500"
                            : creditStats.percentage >= 80
                              ? "bg-orange-500"
                              : "bg-green-500",
                        ]}
                        style={`width: ${creditStats.percentage}%`}
                      />
