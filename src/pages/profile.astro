                </div>
                <div class="text-xs text-slate-500">Ce mois-ci</div>
              </div>
            </div>

            <!-- Section CrÃ©dits Bonus -->
            {
              !userPlanInfo.isAdmin && (
                <div class="mt-4 p-4 bg-gradient-to-r from-amber-50 to-yellow-50 border border-amber-200 rounded-xl">
