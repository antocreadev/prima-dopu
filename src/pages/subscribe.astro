---
import Layout from "../layouts/Layout.astro";
import { SignedIn, SignedOut } from "@clerk/astro/components";

const auth = Astro.locals.auth();
const userId = auth.userId;

if (!userId) {
  return Astro.redirect("/sign-in");
}

// Plan keys: abonnement_50 ou abonnement_100
const planKey = Astro.url.searchParams.get("plan") || "abonnement_50";
const isProPlan = planKey === "abonnement_100";
const planName = isProPlan ? "Pro" : "Standard";
const planPrice = isProPlan ? "100€" : "50€";
const planGenerations = isProPlan ? 50 : 20;
---

<Layout title="S'abonner - PrimaDopu">
  <SignedOut>
    <div class="text-center py-20">
      <p class="text-slate-600">
        Veuillez vous connecter pour accéder à cette page.
      </p>
      <a
        href="/sign-in"
        class="text-orange-600 hover:underline mt-4 inline-block"
      >
        Se connecter
      </a>
    </div>
  </SignedOut>
  <SignedIn>
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-slate-900 mb-4">
          Finaliser votre abonnement
        </h1>
        <p class="text-slate-600">
          Vous avez choisi le plan <strong class="text-orange-600"
            >{planName}</strong
          >
        </p>
      </div>

      <div class="bg-white rounded-2xl border border-slate-200 p-8 shadow-sm">
        <!-- Résumé du plan choisi -->
        <div class="border-b border-slate-200 pb-6 mb-6">
          <div class="flex justify-between items-center">
            <div>
              <h2 class="text-xl font-bold text-slate-900">
                {planName}
              </h2>
              <p class="text-slate-600 text-sm">
                {planGenerations} générations / mois
              </p>
            </div>
            <div class="text-right">
              <span class="text-3xl font-bold text-slate-900">
                {planPrice}
              </span>
              <span class="text-slate-500">/mois</span>
            </div>
          </div>
        </div>

        <!-- Avantages -->
        <div class="mb-8">
          <h3 class="font-semibold text-slate-800 mb-4">Ce qui est inclus :</h3>
          <ul class="space-y-2">
            <li class="flex items-center gap-3 text-slate-700">
              <svg
                class="w-5 h-5 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              {planGenerations} générations par mois
            </li>
            <li class="flex items-center gap-3 text-slate-700">
              <svg
                class="w-5 h-5 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              Bibliothèque de références illimitée
            </li>
            <li class="flex items-center gap-3 text-slate-700">
              <svg
                class="w-5 h-5 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
